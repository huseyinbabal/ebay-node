{
  "name": "ebay-node",
  "description": "eBay Node.js Client",
  "main": "dist/ebay.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "watch:test": "npm t -- -w",
    "test": "mocha test/**/*.js --compilers js:babel-register",
    "cover": "nyc npm t",
    "build": "babel --copy-files --out-dir dist src",
    "prebuild": "rimraf dist",
    "doc": "./node_modules/.bin/jsdoc src/*.js -d doc/",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/huseyinbabal/ebay-node.git"
  },
  "keywords": [
    "ebay",
    "api",
    "node"
  ],
  "author": "Huseyin BABAL <huseyinbabal88@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/huseyinbabal/ebay-node/issues"
  },
  "homepage": "https://github.com/huseyinbabal/ebay-node#readme",
  "dependencies": {
    "request": "^2.72.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "commitizen": "^2.8.2",
    "cz-conventional-changelog": "^1.1.6",
    "expect": "^1.20.1",
    "istanbul": "^0.4.4",
    "jsdoc": "^3.4.0",
    "jsdox": "^0.4.9",
    "mocha": "^2.5.3",
    "rimraf": "^2.5.2",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  }
}
